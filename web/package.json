{
  "name": "web",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build && tsc",
    "serve": "vite preview",
    "test": "docker compose -f ../docker-compose.test.yml up -d && vitest run && docker compose -f ../docker-compose.test.yml down",
    "test:unit": "vitest run",
    "test:e2e": "docker compose -f ../docker-compose.test.yml up -d && playwright test && docker compose -f ../docker-compose.test.yml down",
    "test:e2e:run": "playwright test",
    "test:e2e:ui": "docker compose -f ../docker-compose.test.yml up -d && playwright test --ui && docker compose -f ../docker-compose.test.yml down",
    "test:e2e:debug": "docker compose -f ../docker-compose.test.yml up -d && playwright test --debug && docker compose -f ../docker-compose.test.yml down",
    "test:setup": "docker compose -f ../docker-compose.test.yml up -d",
    "test:teardown": "docker compose -f ../docker-compose.test.yml down",
    "db:reset": "cd ../server && npm run db:reset",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
